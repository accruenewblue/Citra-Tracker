from tkinter import *
from tkinter import messagebox
class NewWindow(Toplevel):
    def __init__(self, master = None):
        super().__init__(master = master)
        self.title('NewWindow')
        self.master = master
        self.lb = Label(self, text='Hello')
        self.lb.grid(column=0, row=0, columnspan=1)
        self.bt1 = Button(self, text="apply Hello", command=self.bt_press)
        self.bt1.grid(column=0, row=1)
        self.bt1 = Button(self, text="apply Hello", command=self.bt_press2)
        self.bt1.grid(column=0, row=2)
    def bt_press(self):
        self.master.basic_lb.config(text="Hello")
        self.newWindow(NewWind)
    def bt_press2(self):
        
        self.master.basic_lb.config(text="Hello")
        self.destroy()
class NewWind(Toplevel):
    def __init__(self, master = None):
        super().__init__(master = master)
        self.title('NewWindow')
        self.master = master
        self.lb = Label(self, text='Hello')
        self.lb.grid(column=0, row=0, columnspan=1)
        self.bt1 = Button(self, text="apply Hello", command=self.bt_press)
        self.bt1.grid(column=0, row=1)
        self.bt1 = Button(self, text="apply Hello", command=self.bt_press2)
        self.bt1.grid(column=0, row=2)
    def bt_press(self):
        self.master.basic_lb.config(text="Hello")
        self.newWindow(NewWindo)
    def bt_press2(self):
        self.master.basic_lb.config(text="Hello")
        self.destroy()
class NewWindo(Toplevel):
    def __init__(self, master = None):
        super().__init__(master = master)
        self.title('NewWindow')
        self.master = master
        self.lb = Label(self, text='Hebrllo')
        self.lb.grid(column=0, row=0, columnspan=1)
        self.bt1 = Button(self, text="abb", command=self.bt_press)
        self.bt1.grid(column=0, row=1)
    def bt_press(self):
        self.master.basic_lb.config(text="Hello")
        self.destroy()
window = Tk()
class basewindow(Frame):
    def __init__(self,master=None):
        super().__init__(master=master)
        def new_Editor():
            self.newWindow=NewWindow()
        def newinfo():
            messagebox.showinfo("Information","Indo")	
        print("test")
        window.title("BasicWindow")	
        window.basic_lb = Label(window, text='None')
        window.basic_lb.grid(column=0, row=0, columnspan=1)
        window.basic_bt = Button(window, text="NewWindow", command=new_Editor)
        window.basic_bt.grid(column=0, row=1)
        window.basic_bt = Button(window, text="NewInfo", command=newinfo)
        window.basic_bt.grid(column=0, row=2)
basewindow().mainloop()